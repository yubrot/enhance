{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -re '.tool_input.file_path // empty | select(endswith(\".rs\"))' > /dev/null && cargo fmt",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
